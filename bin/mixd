#!/bin/bash
rdlkf() { [ -L "$1" ] && (local lk="$(readlink "$1")"; local d="$(dirname "$1")"; cd "$d"; local l="$(rdlkf "$lk")"; ([[ "$l" = /* ]] && echo "$l" || echo "$d/$l")) || echo "$1"; }
DIR="$(dirname "$(rdlkf "$0")")"
export NODE_PATH=$NODE_PATH:./lib
if [ ! -h $DIR/../node_modules/.bin/devtool ]
then
  echo 'installing devtool'
  npm install --prefix $DIR/.. devtool
fi
$DIR/../node_modules/.bin/devtool $DIR/../run.js -- $@
